
<%- include('header') -%>
<main>
    <div class="videos">
        <% mapped.forEach(function(item) { %>
            <div class="videos__container">
                <div class="videos__title">
                    <h2>
                        <%= item.title %> 
                    </h2>
                </div>
                <div class="videos__row">
                     <% item.videos.forEach(function(data) { %>
                         <div class="videos__row--item" class="<%= data.id%>">
                             <div class="videos__thumbnail">
                                <a href="/<%= data.id %>">
                                    <img src="<%= data.poster %>" class="videos__row--img"> 
                                </a>
                                 <div class="videos__timestamp">
                                     <small><%= helper.timestamp(data.duration)%></small>
                                 </div>
                             </div>
                             <div class="videos__row--title">
                                <h3>
                                   <b> <%= data.title %> </b>
                                </h3>
                             </div>
                             <div class="videos__row--creationDate">
                                <strong><%= helper.creationDate(data.created) %></strong>
                             </div>
                         </div>
                    <% }) %>
                </div>
            </div>
        <% }) %> 
    </div>
</main>
<%- include('footer') -%>